# Keymapping
keymap.fullscreen : f               # toggling
keymap.home : r                     # home or reset mnemonic
keymap.back : h                     # forward / backward keys to enable
keymap.forward : l                  # left handed quick navigation
keymap.pan : p                      # pan mnemonic
keymap.zoom : z                     # zoom mnemonic
keymap.save : s                     # saving current figure
keymap.quit : q                     # close the current figure
keymap.grid : g                     # switching on/off a grid in current axes
keymap.yscale : y                   # toggle scaling of y-axes
keymap.xscale : x                   # toggle scaling of x-axes

